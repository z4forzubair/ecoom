<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Product</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<!-- To show price of each product, it's quantity, discount, and total amount here -->
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= "#{current_user.first_name}  #{current_user.last_name}" %></td>
        <td><%= cart.product.name %></td>
        <td><%= cart.quantity %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Place Order', make_order_path %>
<br>
<%= link_to 'New Cart', new_cart_path %>
